# Puerto donde se expone la aplicacion (default: 8080)
PORT=8080

# JWT Configuration
JWT_SECRET=cambiar-por-un-secreto-seguro-de-32-caracteres
JWT_EXPIRES_IN=7d

# Odoo Configuration
ODOO_URL=https://tu-instancia.odoo.com
ODOO_DB=nombre-base-datos
ODOO_ADMIN_USER=usuario-odoo
ODOO_ADMIN_PASSWORD=password-odoo

# QR Configuration
QR_HMAC_SECRET=secreto-para-firmar-qr
QR_EXPIRATION_MINUTES=60
ALLOW_SIMPLE_QR=true

# CORS (separar multiples origenes con coma)
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
