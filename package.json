{
  "name": "qraxer",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:backend": "pnpm --filter qraxer-api run dev",
    "dev:frontend": "pnpm --filter qraxer-pwa run dev",
    "install:all": "pnpm install",
    "build": "pnpm --filter qraxer-pwa run build",
    "vercel-build": "cd frontend && npm install && npm run build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2"
  },
  "engines": {
    "node": "18.x"
  }
}
